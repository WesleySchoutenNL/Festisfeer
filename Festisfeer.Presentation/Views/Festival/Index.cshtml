@model List<Festisfeer.Presentation.ViewModels.FestivalViewModel>

<h2 class="text-center mb-4">Festivals</h2>

<div class="container">
    <div class="row g-4">
        @foreach (var festival in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card shadow-sm border-0">
                    <a href="@Url.Action("Details", "Festival", new { id = festival.Id })">
                        <img src="@festival.FestivalImg" class="card-img-top" alt="Festival afbeelding" style="height: 200px; object-fit: cover;">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@festival.Name</h5>
                        <p class="card-text"><strong>Locatie:</strong> @festival.Location</p>
                        <p class="card-text"><strong>Datum:</strong> @festival.Period</p>
                        <p class="card-text"><strong>Genre:</strong> @festival.Genre</p>
                        <p class="card-text"><strong>Ticketprijs:</strong> @festival.TicketPriceFormatted</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>